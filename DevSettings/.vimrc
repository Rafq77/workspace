execute pathogen#infect()

set nu
syntax on
filetype plugin on
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set laststatus=2
set showtabline=2
set background=dark
set hidden
colorscheme solarized
let g:solarized_termcolors=256

set expandtab

nmap <C-E> :NERDTreeToggle<CR>
map gn :bn<CR>
map gp :bp<CR>
